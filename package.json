{
  "name": "domily",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "build:rc": "bun --filter @domily/runtime-core build",
    "build:dr": "bun --filter @domily/router build",
    "build:vp": "bun --filter vite-plugin-domily build",
    "build": "bun build:rc && bun build:dr && bun build:vp",
    "test": "bun run build && bun --filter domily-test dev",
    "build:test": "bun run build && bun --filter domily-test build",
    "release:runtime-core": "cd packages/runtime-core && bun run release",
    "release:router": "cd packages/domily-router && bun run release"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
