{
  "name": "domily-monorepo",
  "type": "module",
  "workspaces": [
    "packages/runtime-core",
    "packages/domily-router",
    "packages/vite-plugin-domily",
    "packages/domily"
  ],
  "private": true,
  "scripts": {
    "build:rc": "bun --filter @domily/runtime-core build",
    "build:dr": "bun --filter @domily/router build",
    "build:vp": "bun --filter vite-plugin-domily build",
    "build:domily": "bun --filter domily build",
    "build": "bun build:rc && bun build:dr && bun build:vp && bun build:domily",
    "test": "bun run build && bun --filter domily-test dev",
    "build:test": "bun run build && bun --filter domily-test build",
    "release:runtime-core": "cd packages/runtime-core && npm run release",
    "release:router": "cd packages/domily-router && npm run release"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}