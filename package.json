{
  "name": "domily",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "build:rc": "bun --filter @domily/runtime-core build",
    "test:vp": "bun --filter vite-plugin-domily test",
    "build:vp-test": "bun --filter vite-plugin-domily test:build",
    "yp": "bun build:rc && cd packages/runtime-core && yalc publish",
    "ya": "cd packages/vite-plugin-domily && yalc add @domily/runtime-core"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}